<h1>Modifier l'Examen</h1>

<div class="card">
  <div class="card-body">
    <%= form_with(model: @examen, local: true) do |form| %>
      <% if @examen.errors.any? %>
        <div class="alert alert-danger">
          <h4>Erreurs :</h4>
          <ul>
            <% @examen.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.label :nom, 'Nom de l\'Examen' %>
        <%= form.text_field :nom, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :description, 'Description' %>
        <%= form.text_area :description, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :conditionPrealable, 'Condition Préalable' %>
        <%= form.text_field :conditionPrealable, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :precaution, 'Précautions' %>
        <%= form.text_area :precaution, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :montant, 'Montant' %>
        <%= form.number_field :montant, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :laboratoire_id, 'Sélectionnez un Laboratoire' %>
        <%= form.collection_select :laboratoire_id, @laboratoires, :id, :nom, { prompt: 'Choisissez un laboratoire' }, class: 'form-control' %>
      </div>

      <div class="mt-4">
        <%= form.submit 'Mettre à jour', class: 'btn btn-primary' %>
        <%= link_to 'Annuler', examens_path, class: 'btn btn-secondary' %>
      </div>
    <% end %>
  </div>
</div>
