<div class="container">
  <h2 class="text-center">Inscription</h2>

  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-horizontal" }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-group">
              <%= f.label :name, class: "control-label" %>
              <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :contact, class: "control-label" %>
              <%= f.telephone_field :contact, autocomplete: "tel", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :email, class: "control-label" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :password, class: "control-label" %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> caract√®res minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation, class: "control-label" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div>

            <div class="field">
              <%= f.label :user_type, "Je suis", class: "control-label" %>
              <%= f.select :user_type, options_for_select([['Patient', 'patient'], ['Laborantin', 'laborantin']]), {}, class: "form-control" %>
            </div>


            <div class="form-group">
              <%= f.submit "S'inscrire", class: "btn btn-primary btn-block" %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
