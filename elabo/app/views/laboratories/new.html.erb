<div class="container align-items-center py-5">
  <div class="card" style="width: 50%;">
    <div class="card-body">
      <h2 class="card-title text-center">Créer un nouveau laboratoire</h2>

      <%= form_with(model: @laboratory, local: true) do |form| %>
        <div class="form-group">
          <%= form.label :name, 'Nom du laboratoire' %>
          <%= form.text_field :name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :address, 'Adresse du laboratoire' %>
          <%= form.text_field :address, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :city, 'Ville du laboratoire' %>
          <%= form.text_field :city, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :email, 'Email du laboratoire' %>
          <%= form.email_field :email, class: 'form-control' %>
        </div>

        <!-- Champs latitude et longitude (utilisés par la carte) -->
        <div class="form-group">
          <%= form.label :latitude, 'Latitude' %>
          <%= form.text_field :latitude, class: 'form-control', id: 'latitude', readonly: true %>
        </div>

        <div class="form-group">
          <%= form.label :longitude, 'Longitude' %>
          <%= form.text_field :longitude, class: 'form-control', id: 'longitude', readonly: true %>
        </div>

        <!-- Carte Leaflet pour sélectionner la latitude et la longitude -->
        <div id="map" style="height: 300px; margin-bottom: 20px;"></div>

        <div class="form-group text-center">
          <%= form.submit 'Créer le laboratoire', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<script>
  // Initialiser la carte
  var map = L.map('map').setView([14.692, -17.446], 13); // Coordonnées par défaut (par exemple Dakar)

  // Ajouter les tuiles OpenStreetMap
  L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
    attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
  }).addTo(map);

  // Créer un marqueur qui peut être déplacé
  var marker = L.marker([14.692, -17.446], {draggable: true}).addTo(map);

  // Mettre à jour les champs de latitude et de longitude lorsque le marqueur est déplacé
  marker.on('dragend', function (e) {
    var position = marker.getLatLng();
    document.getElementById('latitude').value = position.lat;
    document.getElementById('longitude').value = position.lng;
  });

  // Mettre à jour les champs de latitude et longitude lorsque l'utilisateur clique sur la carte
  map.on('click', function(e) {
    var lat = e.latlng.lat;
    var lng = e.latlng.lng;

    marker.setLatLng([lat, lng]);

    document.getElementById('latitude').value = lat;
    document.getElementById('longitude').value = lng;
  });
</script>
